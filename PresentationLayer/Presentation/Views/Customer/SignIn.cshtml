
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/CustomerLayout.cshtml";
}

<div class="login_box_main_wrapper" id="login_height" style="height: 956px;">
    <div class="container">
        <div class="login-logo" style="
    margin-top: -8vh;
">
            <a href="index.html">
                <img src="/images/index1-logo.png" alt="logo" style="max-width: 15vh;">
            </a>
        </div>
        <div class="signin-wrapper" style="padding-top: 5vh;padding-bottom: 5vh;">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-12">
                    <div class="left-side">
                        <h4 style="
    text-align-last: center;
">
                                Sign In 
                        </h4>
                        <form action="/Customer/SignInRequest" method="post">
                            <div class="form-group field-icon row">
                                <div class="col-md-12">
                                    <input type="email" name="Email" placeholder="Email Address" required>
                                    <span>
                                        <i class="fa fa-user" aria-hidden="true" style="margin-top: 0.5vh;"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group field-icon row">
                                <div class="col-md-12">
                                    <input type="password" name="Password" placeholder="Password" required>
                                    <span>
                                        <i class="fa fa-unlock-alt" aria-hidden="true" style="margin-top: 0.5vh;"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="cond" style="text-align: center;">
                                <input type="checkbox" id="box1" name="RememberMe" value="true" style="margin: 0 auto;">
                                                                <label for="box1" style="margin-right: 1vh;">Remember me</label>

                            </div>
                            
                            <div class="login-btn-sec" style="">
                                <div style="
    display: flex;
    margin: 0 auto;
    place-content: center;
">
                                    <button type="submit" class="sub-btn" style="/* margin-left: 5vh; */">
                                        <span>Sign In</span>
                                    </button>
                                </div>
                                
                                <p style="text-align: center;">If you dont have an account <a href="/Customer/SignUp" style="margin-right: 1vh;">Sign Up now</a></p>
                                
                            </div>
                        </form>

                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-12">
                    <div class="login-img">
                        <img src="/images/login-side.png" alt="img">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>