@using ViewModel.AdminViewModels;
@model List<Entities.Service>
@{
    ViewBag.Title = "Services";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
  
}
<div style="background-color:white " >
    <section class="service_section layout_padding" style="color:black; padding:60px">
        <div class="container">
            <div class="heading_container heading_center ">
                <h2 class="">
                    Our Services
                </h2>

            </div>
            
            <div class="service_container">
                <div class="carousel-wrap " >
                    <div class="service_owl-carousel owl-carousel" >

                        @foreach (var service in Model)
                        {

                            <div class="item" >
                                <div class="box " style="min-height:300px">
                                    <div class="img-box">
                                        <img src="~/css/images/s1.png" alt="" />
                                    </div>
                                    <div class="detail-box">
                                        <h5>
                                            @service.Name
                                        </h5>
                                        <p>
                                            @service.Details
                                        </p>

                                      
                                    
                                        <form action="deleteService" method="post">
                                            

                                            <input type="hidden" name="Id" value="@service.Id" />
                                            <div class="detail-box pr-md-2" style="color:white ">
                                                <button href="" class="hero_btn" style="width:70%; height:40px ; background-color:darkcyan ">
                                                    Delete
                                                </button>
                                            </div>
                                        </form>
                                        <form action="service" method="post">
                                            <input type="hidden" name="Id" value="@service.Id" />
                                            <input type="hidden" name="Name" value="@service.Name" />
                                            <input type="hidden" name="Details" value="@service.Details" />

                                            <div class="detail-box pr-md-2" style="color:white ">
                                                <button href="" class="hero_btn" style="width:70%; height:40px ; background-color:darkcyan ">
                                                    Edit    
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                        }







                    </div>
                </div>
            </div>
            
            @Html.Partial("_addNewService",new addServiceViewModel() );
            

        </div>
    </section>
</div>