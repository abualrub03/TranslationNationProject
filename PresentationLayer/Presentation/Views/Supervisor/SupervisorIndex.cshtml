@model ViewModel.CurrentTasksListViewModel
@{
    ViewData["Title"] = "SupervisorIndex";
    Layout = "~/Views/Shared/SupervisorLayout.cshtml";
}



<div class="index3-slider-wrapper ps-rel">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-12">
                <div class="slider-caption">
                    <h2>Invite Now Students </h2>
                    <p>Fill the details below!</p>
                </div>
                <div class="slider-form float_left">
                    <form method="post" action="/Supervisor/InviteEmail">
                        <div class="form-group mb-4 row">
                            <div class="col-md-12 col-12 field-icon">
                                <input name="Email" id="Email" type="Email" placeholder="Enter Student Email">
                                <span><i class="fa fa-envelope" aria-hidden="true"></i></span>
                            </div>

                        </div>

                        <div class="form-group mb-4 row">
                            <div class="col-md-12 col-12 field-icon">
                                <input name="Name" id="Name" type="text" placeholder="Student Name">
                                <span><i class="fa fa-user  " aria-hidden="true"></i></span>
                            </div>

                        </div>
                        <button class="search-btn" style="
    margin: auto;
">
                            <span><i class="fa fa-paper-plane" aria-hidden="true"></i> &nbsp; Search Job</span>
                        </button>
                    </form>


                </div>
            </div>
            <div class="col-lg-6 col-12">
                <div class="index2-slider-img d-lg-block d-none">
                    <img src="/images/index3/slider-img.png" alt="img">
                </div>
            </div>
        </div>
    </div>
    <div class="project-pipe-wrapper float_left">
        <div class="container">
            <div class="pro-pipe-main">
                <h5>University: <span> @Model.universityName </span></h5>
                <h5>Number Of Students: <span> @Model.universityNumberOfStudents </span></h5>
            </div>
        </div>
    </div>
</div>




<div class="love-job-main-wrapper float_left ptb-100">
    <div class="home1-section-heading1" style="
    padding: 0vh;
    text-align: center;
    margin-bottom: 5vh;
">
        <h4>Verification Requests<br></h4>
    </div>
    <div class="container">
        <div class="row">

            <div class="col-lg-12 col-md-12 col-12">
                <div class="love-post-wrapper">
                    <div class="left-side-love" id="Requests">
                         @foreach(var i in Model.NotVerifiedUniversityStudent){

                        <div class="left-side-one">
                            <a href="javascript:;"><h5>@i.FirstName @i.SecondName </h5><h8> @Model.universityName </h8></a>
                            
                            <div class="love-footer">
                                
                                <div class="love-text">
                                    <h5>Email Address</h5>
                                    <p>@i.EmailAddress</p>
                                </div>
                                    <div class="love-btn">
                                        <form id="acceptForm" action="/Supervisor/Accept" method="post">
                                            <input type="hidden" id="AccountId" name="AccountId" value="@i.AccountId" />
                                            <a href="javascript:;" id="AcceptBtn"><span>Accept</span></a>
                                        </form>
                                    </div>
                            </div>
                        </div>
                        }
                    </div>
                    
                </div>
            </div>

        </div>
    </div>
</div>



<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        document.getElementById('AcceptBtn').addEventListener('click', function () {
            // Submit the form when the Accept button is clicked
            document.getElementById('acceptForm').submit();
        });
   

    });
</script>